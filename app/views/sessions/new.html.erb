
<h1>SIGN IN</h1>
<p id="error"><%= notice %></p>
<%= form_for(:session, :url => sessions_path) do |f|%>
    <div class="field">
        <%=f.label :email %><br>
        <%=f.text_field :email%>
    </div>

    <div class="field">
        <%=f.label :password %><br>
        <%=f.password_field :password%>
    </div>

    <div class="actions">
        <%=f.submit "sign in"%>
    </div>
<%end%>

<p>New user? <button><%= link_to "Sign up now!", new_user_path %>
</button></p>
